    <meta name="description" content="HTK-TNWDS-01铁路车轮故障在线检测系统">
    <title>@ViewBag.Title</title>
    <!-- Custom styles for this template -->
    <link href="~/Content/login.css" rel="stylesheet">
    <style type="text/css">
        div#background {
            background: black url('~/img/login/background_sky.jpg') repeat-x 5% 0%;
            background-size: cover;
            -webkit-animation: STAR-MOVE 200s linear infinite;
            -moz-animation: STAR-MOVE 200s linear infinite;
            animation: STAR-MOVE 200s linear infinite;
            opacity: 1;
        }
    </style>
    <script>
        $(function () {

            $("#txtValiCode").val("");

        });
        function ClearText() {
            $("#txtUserName").val("");
            $("#txtPassword").val("");
            $("#txtValiCode").val("");
            refresh();
        };
        function refresh() {
            //虽然实际用不到rand，但是没有就不会刷新(因为缓存?)
            $("#ValiCode").attr("src", "@Url.Action("VerifyCode", new { rand = new Random()})");
