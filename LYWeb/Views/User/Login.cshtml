                    </tr>
                    <tr>
                        <a href="~/User/Register">注册新用户</a>
                    </tr>
                </table>
                @Html.ValidationMessage("failed", new { style = "color:red; font-family: 楷体" })
            </div>
        </form>
        <div style="position: fixed; bottom: 15%; width: 100%;">
            <div style="margin: 0 auto; color: rgba(255,255,255,9); font-family: 华文仿宋; font-size: 12pt">
                Copyright@2020 By 哈尔滨铁路科研所科技有限公司. All Rights Reserved.
                <br />
                <%--(请使用Chrome内核浏览器访问)--%>
            </div>
        </div>
</body>
</html>
